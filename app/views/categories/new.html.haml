= provide(:title, t(:modify_categories))
.center
  = render 'shared/small_flash'
  = render 'category_error_messages'
  .row.text-center
    .col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2.col-xs-12
      .jumbotron
        %h2= t(:create_category)
        = form_for :category, url: categories_modify_path do |f|
          = f.label t(:par_name)
          = f.text_field 'name', value: '', class: 'form-control'

          = f.submit t(:btn_create_category), class: 'btn btn-primary btn-block'


        %h2= t(:delete_category)
        = form_for :category, url: categories_modify_path, method: :delete do |f|
          = f.label t(:par_name)
          = f.collection_select 'name', Category.order(:name), :name, :name, {include_blank: true, selected: nil}, {class: 'form-control'}

          = f.submit t(:btn_delete_category), class: 'btn btn-primary btn-block'

        = link_to t(:btn_cancel), new_task_path, class: 'btn btn-lg btn-primary btn-toolbar'