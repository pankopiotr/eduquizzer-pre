- if @category && @category.errors.any?
  #error_explanation
    .alert.alert-danger.col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2.col-xs-12
      - t(:form_has) + ' ' + I18n.t(:error, count: @category.errors.count)
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg