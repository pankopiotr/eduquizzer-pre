.center
  = form_for :user, url: url_for(controller: 'users', action: 'create_optional') do |f|
    = render 'shared/user_error_messages'
    .row.text-center
      .col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
        .jumbotron
          = f.label t(:par_first_name)
          %i{class: 'material-icons text-muted', rel: 'tooltip', title: t(:tt_rgstr_first_name)} info_outline
          = f.text_field 'first_name', class: 'form-control'

          = f.label t(:par_last_name)
          %i{class: 'material-icons text-muted', rel: 'tooltip', title: t(:tt_rgstr_last_name)} info_outline
          = f.text_field 'last_name', class: 'form-control'

          = f.label t(:par_student_id)
          %i{class: 'material-icons text-muted', rel: 'tooltip', title: t(:tt_rgstr_student_id)} info_outline
          = f.text_field 'student_id', class: 'form-control'

          = f.submit t(:btn_register), class: 'btn btn-lg btn-primary btn-toolbar'
          = link_to t(:btn_skip), register_path, class: 'btn',
                                             data: {confirm: t(:cannot_edit) + "\n" + t(:you_sure)}